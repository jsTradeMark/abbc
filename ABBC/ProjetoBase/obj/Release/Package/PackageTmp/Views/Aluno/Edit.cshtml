@using ProjetoBase.Models
@using ProjetoBase.DAO
@using ProjetoBase.DTO
@using ProjetoBase.Helpers
@using ProjetoBase.Models
@model ProjetoBase.DTO.AlunoDTO

@{
    ViewBag.Title = "Editar Aluno";
    List<string> erros = ViewBag.erros;
}

<div class="content">
    <div class="animated fadeInDown">
        <div class="row">
            <div class="col-lg-12">
                @if (erros != null && erros.Count() > 0)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var erro in erros)
                            {
                                <li>@erro</li>
                            }
                        </ul>
                    </div>
                }
                <div class="card">
                    <div class="card-header card-header-icon" data-background-color="red">
                        <i class="material-icons">mode_edit</i>
                    </div>
                    <div class="card-content">
                        <h4 class="card-title">Cadastro de Aluno</h4>
                        <form class="form-horizontal" action="@Url.Action("Edit", "Aluno")" method="post">

                            <div class="form-group">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">Nome</label>
                                <div class="col-lg-8">
                                    <input name="nome" id="nome" value="@Model.nome" class="form-control border-input" required="" aria-required="true">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">Contratante</label>
                                <div class="col-lg-8">
                                    <input name="contratante" id="contratante" value="@Model.Contratante" class="form-control border-input" required="" aria-required="true">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">RG</label>
                                <div class="col-lg-8">
                                    <input name="rg" id="rg" value="@Model.RG" class="form-control border-input" required="" aria-required="true">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">CPF</label>
                                <div class="col-lg-8">
                                    <input name="cpf" id="cpf" value="@Model.cpf" class="form-control border-input" disabled>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">E-mail</label>
                                <div class="col-lg-8">
                                    <input name="email" id="email" value="@Model.email" type="email" class="form-control border-input" required="" aria-required="true">
                                </div>
                            </div>
                            <div class="form-group bmd-form-group is-filled">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">Nascimento</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control datepicker" value="@Model.Nascimento" name="nascimento" id="nascimento" required>
                                </div>
                            </div>
                            <div class="form-group bmd-form-group is-filled">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">Nascimento Contratante</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control datepicker" value="@Model.NascimentoContratante" name="nascimentoContratante" id="nascimentoContratante" required />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">Filiação (Mãe)</label>
                                <div class="col-lg-8">
                                    <input name="filiacao" id="filiacao" value="@Model.Filiacao" class="form-control border-input" required="" aria-required="true">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">Cep</label>
                                <div class="col-lg-8">
                                    <input name="cep" id="cep" value="@Model.CEP" class="form-control border-input" required="" aria-required="true">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">Endereço</label>
                                <div class="col-lg-8">
                                    <input name="rua" id="rua" value="@Model.rua" class="form-control border-input" required="" aria-required="true">
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">Número / Bairro</label>
                                <div class="col-lg-2">
                                    <input name="numero" id="numero" value="@Model.Numero" type="number" min="0" class="form-control border-input" required="" aria-required="true">
                                </div>
                                <div class="col-lg-6">
                                    <input name="bairro" id="bairro" value="@Model.Bairro" class="form-control border-input" required="" aria-required="true">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">Cidade / UF</label>
                                <div class="col-lg-6">
                                    <input name="cidade" id="cidade" value="@Model.Cidade" class="form-control border-input" required="" aria-required="true">
                                </div>
                                <div class="col-lg-2">
                                    <input name="uf" id="uf" value="@Model.uf" class="form-control border-input" required="" aria-required="true">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">Telefone</label>
                                <div class="col-lg-8">
                                    <input name="telefone" id="telefone" value="@Model.telefone" class="form-control border-input" required="" aria-required="true">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">Telefone Contratante</label>
                                <div class="col-lg-8">
                                    <input name="TelefoneContratante" id="TelefoneContratante" value="@Model.TelefoneContratante" class="form-control border-input" required="" aria-required="true">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-offset-1 col-lg-1 col-form-label">Telefone Contato</label>
                                <div class="col-lg-8">
                                    <input name="TelefoneContato" id="TelefoneContato" value="@Model.TelefoneContato" class="form-control border-input" required="" aria-required="true">
                                </div>
                            </div>


                            <input hidden value="@ViewBag.ID" name="ID" id="ID" />
                            <input hidden value="1" name="ativo" id="ativo" />
                            <input hidden value="1" name="pais" id="pais" />

                            <!--Botões-->
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button class="btn btn-danger" type="submit">Salvar</button>
                                    <a class="btn btn-white" href="@Url.Action("Index", "Aluno")">Voltar</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--   Core JS Files   -->
@Scripts.Render("~/bundles/jquery")

<!--   More JS   -->
@Scripts.Render("~/bundles/AlunoFicha")
